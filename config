
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

ZSH_THEME="powerlevel10k/powerlevel10k"
source ~/powerlevel10k/powerlevel10k.zsh-theme

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Terminal Aliases
alias l="ls -alFh"
alias vz="vim ~/zsh-source-file/config"
alias cz="cat ~/zsh-source-file/config"
alias hist="cat ~/.zsh_history"
alias ports="lsof -nP +c 15 | grep LISTEN"
alias cyp="npx cypress run"
alias retro-tools="ssh -i "~/.ssh/Jenkins-Box-Key.pem" ec2-user@ec2-34-243-249-91.eu-west-1.compute.amazonaws.com"
# Jenkins in Docker Commands
alias jk-ssh="docker exec -it --user root 4f2d6d03d073 /bin/bash"
alias jk-webhook="relay forward --bucket jenkins http://localhost:8080/"
alias mk="mkdir -p"

# Docker Aliases
alias dp="docker ps"
alias dr="docker run"
alias di="docker images"
alias dc="docker container"
alias dv="docker volume"

# Git Aliases
alias gaa="git add ."
alias ga="git add"
alias gac="git add .;git commit -m"
alias gb="git branch"
alias gc="git commit -m"
alias gch="git checkout"
alias gp="git push -u origin"
alias grv="git remote -v"
alias gra="git remote add origin"
alias gacp="gaa;gc update;gp -u origin"  
alias grs="git remote set-url origin"

# Terraform Aliases
alias tf="terraform"
